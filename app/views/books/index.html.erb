

<h1>Books</h1>
        <div class="row">
    
                  <% @books.each do |book| %>
                    <div class="col-md-3">
                      <a href="/books/<%= book.id%>">
                        <%=image_tag book.book_img.url(:book_index),class: "book" %> </a>
                        <h4 class="book-title"><%= book.title %></h4>
                        </div>
                    
                  <% end %>
  
        </div>            
